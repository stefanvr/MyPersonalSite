!!! 5
%html{ lang: 'en' }
  %head
    %meta{ charset: 'utf-8' }
    %title= page_title
    %link{ rel: 'stylesheet', href: '/styles.css' }
    - if @item[:tldr] && @item[:tldr] =~ /\S/
      %meta{ name: 'description', value: @item[:tldr] }
    - else
      %meta{ name: 'description', value: 'stefan blog personal site' }
    - if @item[:tags] && @item[:tags].any?
      %meta{ name: 'keywords', value: @item[:tags].join(', ') }
    %link{ rel: 'alternate', title: @config[:title], type: 'application/atom+xml', href: '/feed.xml' }
    %meta{ name: 'viewport', content: 'width=device-width' }
    :javascript
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');
      ga('create', 'UA-45544667-1', 'webfactional.com');
      ga('send', 'pageview');
  %body
    #page
      #{ render 'header' } 
      #content
        #{ render 'sidebar' }
        %section{ role: 'main' }
          = yield
      %footer{ role: 'contentinfo' }
        %p &copy; copyright #{Time.now.year} #{@config[:author_name]}.
    %script{ src: '/script.js' }
